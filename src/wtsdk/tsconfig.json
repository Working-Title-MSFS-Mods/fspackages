{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2015",
        "module":"ES2015",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        // TODO lets enable strict when he have time to fix all 
        "allowJs": true,
        "strict": false,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "typeRoots": [
            // "./node_modules/@types",
            "./src/types"
        ],
    },
    "filesGlob": [
        "./src/types/*.d.ts"
    ],
    "include": [
        "./src"
    ]
}